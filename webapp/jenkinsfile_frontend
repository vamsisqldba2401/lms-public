pipeline {
    agent {
      label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('mydockeruser')
     registry = "vamsisqldba2401/8am-lms-fe"
        registryCredential = 'mydockeruser'
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t vamsisqldba2401/8am-lms-fe .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push vamsisqldba2401/8am-lms-fe'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f vamsisqldba2401/8am-lms-fe'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe vamsisqldba2401/8am-lms-fe'
            }
        }
    }
}
